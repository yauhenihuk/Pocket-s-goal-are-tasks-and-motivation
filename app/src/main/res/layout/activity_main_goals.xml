<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:background="@color/newBackground"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="3">

    <ImageView
        android:id="@+id/iv_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="0.1"
        android:layout_column="0"
        android:layout_columnWeight="0.1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher"
        android:onClick="onClickSport"/>

    <TextView
        android:id="@+id/tv_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="спортивные цели" />

    <ImageView
        android:id="@+id/iv_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="Здоровье" />

    <ImageView
        android:id="@+id/iv_businessGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_businessGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="бизнес цели" />

    <ImageView
        android:id="@+id/iv_careersGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_careersGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="карьерные цели" />

    <ImageView
        android:id="@+id/iv_financeGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_financeGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:text="финансовые цели" />

    <ImageView
        android:id="@+id/iv_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_margin="2sp"
        android:clickable="true"
        android:focusable="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_goalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:text="прочие цели" />

</GridLayout>